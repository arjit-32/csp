---
const { columns } = Astro.props;

const categoryColors = {
  'dev': 'bg-blue-500',
  'problem-solving': 'bg-red-500',
  'dev++': 'bg-green-500',
  'core': 'bg-yellow-500',
  'elective': 'bg-purple-500'
};
---

<div class="p-4">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    {columns.map(column => (
      <div class="bg-gray-100 p-4 rounded shadow-md">
        <h2 class="text-xl font-bold mb-2">{column.name}</h2>
        <div>
          {column.tasks.map(task => (
            <div class="bg-white p-2 mb-2 rounded shadow-sm border border-gray-200 flex justify-between items-center">
              <span>{task.name}</span>
              {task.category && (
                <span class={`text-xs text-white px-2 py-1 rounded-full ${categoryColors[task.category]}`}>
                  {task.category}
                </span>
              )}
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</div>
