---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, getEntry } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const allWebDev: CollectionEntry<'webdev'>[] = await getCollection('webdev');
const htmlandcss = [];

if (allWebDev.length > 0) {
    allWebDev.forEach((item) => {
        if (item.data.course === 'htmlandcss') {
            htmlandcss.push(item);
        }
    });
}

---

<BaseLayout title="webdev">
    <h1>Web Development</hjson>
   
    
        {htmlandcss.map((item) => (
        <a href={`/webdev/${item.slug}`}>
            <h2>{item.data.title}</h2>
        </a>
        ))}
</BaseLayout>
